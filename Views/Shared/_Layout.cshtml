<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Project Management System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
  

    <nav class="navbar navbar-expand-md navbar-light bg-dark fixed-top">
        @Html.ActionLink("Project Management System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand text-white" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mr-auto">
                @if (User.Identity.Name != "")
                {
                    <li class="nav-item active">
                        <a href="@Url.Action("Index", "Projects")" class="nav-link text-white">Projects</a>
                    </li>
                }

                @if (User.Identity.Name != "")
                {
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "Members")" class="nav-link text-white">Members</a>
                    </li>
                }
            </ul>

            @if (User.Identity.Name != "")
            {
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "Signout")" class="nav-link text-white">Log Out</a>
                    </li>
                </ul>
            }
            </div>
    </nav>

    <div class="container-fluid mt-5">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
